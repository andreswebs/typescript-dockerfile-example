{
  "name": "typescript-dockerfile-example",
  "version": "0.0.1",
  "description": "Do your thing",
  "license": "Unlicense",
  "main": "dist/app.js",
  "types": "dist/app.d.ts",
  "files": [
    "dist"
  ],
  "private": true,
  "engines": {
    "node": ">= 18"
  },
  "scripts": {
    "local:ts": "npx ts-node src/app.ts",
    "build": "npx rimraf ./dist && npx tsc",
    "watch": "npx tsc -w",
    "lint": "npx eslint . --ext .js,.ts",
    "lint:fix": "npx eslint . --ext .js,.ts --fix"
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.4",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.2",
    "rimraf": "^4.0.4",
    "typescript": "^4.9.4"
  }
}
